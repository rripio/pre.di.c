## folders

music_directory                     "~/music"
playlist_directory                  "~/playlists"
log_file                            "~/.mpd/log"
pid_file                            "~/.mpd/pid"
state_file                          "~/.mpd/mpd_state"
state_file_interval                 "1"
sticker_file                        "~/.mpd/sticker.sqlite"


## listen to clients

port                    "6600"
# listen to tcp/ip socket:
# bind_to_address                     "any"
bind_to_address                     "0.0.0.0"       # only local network
# listen to unix socket:
# bind_to_address                     "~/.mpd/socket"

## user when run from root

# user                                "predic"
# group                               "audio"


## database

database {
  plugin "simple"
  path "~/.mpd/database"
  cache_directory "~/.mpd/cache"
}

auto_update                         "yes"
# auto_update_depth                   "3"
follow_outside_symlinks             "no"
follow_inside_symlinks              "no"


## neighbor plugins

neighbors {
    plugin "udisks"
}

## input plugins


## Decoders (see active ones with 'mpd --version'

decoder {
    plugin "mpg123"
    enabled "no"
    }


## Decoders (see active ones with 'mpd --version'

input {
    plugin "tidal"
    enabled "no"
    }

input {
    plugin "qobuz"
    enabled "no"
    }


## outputs

# jack audio output
audio_output {
    type            "jack"
    name            "mpd_jack"
    client_name     "mpd_jack"
    source_ports    "L,R,C,LS,RS"
    auto_destination_ports "no"
    destination_ports "brutefir:input-0,brutefir:input-1"
    mixer_type      "null"
    enabled         "yes"
    always_on       "yes"
}


## resampling

resampler {
    plugin  "soxr"
    quality "high"
}

