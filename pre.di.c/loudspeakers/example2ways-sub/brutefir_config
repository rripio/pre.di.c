# ---------------------------------------------------------
# ---------------- CONVOLVER:  EQ filters  ----------------
# Madatory filters "f.eq.L" "f.eq.R" for VOLUME & EQ curves
# STARTUP attenuation: 100 dB  ;-)
# ---------------------------------------------------------

filter "f.eq.L" {
    from_inputs:  "in.L"/100/1;
    to_filters:   "f.drc.L", "f.drc.R";
    coeff:        "c.eq";
};

filter "f.eq.R" {
    from_inputs:  "in.R"/100/1;
    to_filters:   "f.drc.R", "f.drc.L";
